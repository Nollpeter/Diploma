@typeparam T
@Title
@*Notice how we render a RenderFragment inside a RenderFragment*@
@ListTemplate(
    @:@{
        foreach (var item in ListItems)
        {
            @ListItemTemplate(item);
        }
    }
)

@code {

    [Parameter, EditorRequired] public required RenderFragment Title { get; set; }

    [Parameter, EditorRequired] public required List<T> ListItems { get; set; }

    [Parameter, EditorRequired] public required RenderFragment<T> ListItemTemplate { get; set; }

    [Parameter, EditorRequired] public required RenderFragment<RenderFragment> ListTemplate { get; set; } // Notice how we pass a RenderFragment to a RenderFragment

}