@using BlazorCraft.Web.Shared._Exercises.Exam
@inject IExamEmployeeService EmployeeService
<MudContainer>
    @* Exercise markup comes here: *@
    <ExamEmployeeForm Employee="Employee" IsEditMode="true" EmployeeValid="CreateEmployee" Cancel="Cancel"></ExamEmployeeForm>
</MudContainer>

@code {
    [Parameter] public EventCallback Closed { get; set; }

    [Parameter]
    public ExamEmployee Employee { get; set; } = null!;

    private async Task CreateEmployee()
    {
        await EmployeeService.AddEmployee(Employee);
        await Closed.InvokeAsync();
    }

    private async Task Cancel()
    {
        await Closed.InvokeAsync();
    }

}